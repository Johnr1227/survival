package com.cool.particle;

import com.cool.lib.Texture;
import com.cool.player.Player;

public class Particle {
	public float x;
	public float y;
	public float z;

	public float velX;
	public float velY;
	public float velZ;

	public float size;

	public Texture t;
	
	public int ticksExisted = 0;

	public Particle(float x, float y, float z, float velX, float velY, float velZ, float size, Texture t) {
		this.x = x;
		this.y = y;
		this.z = z;

		this.velX = velX;
		this.velY = velY;
		this.velZ = velZ;
		
		this.size = size;
		
		this.t = t;
	}
	
	public void tick() {
		ticksExisted++;
	}
	public void render(double rX, double rY, Player p, int tWidth) {
		t.render((int) (rX + (p.xPos-x) * tWidth), (int) (rY + (p.zPos-z) * tWidth), (int) (rX + (1 + (p.xPos-x)) * tWidth),
				(int) (rY + (1 + (p.yPos-y)) * tWidth), tWidth);
	}
}
