package com.cool.menu;

import com.cool.Main;
import com.cool.Sounds;
import com.cool.Textures;
import com.cool.lib.Renderer;

public class SaveMenu extends Menu {
	@Override
	public void init() {
		createButton(704, 248, 16, 348, Textures.BUTTON_NORMAL, Textures.BUTTON_SELECTED, "Save A", 40);
		createButton(704, 132, 16, 232, Textures.BUTTON_NORMAL, Textures.BUTTON_SELECTED, "Save B", 40);
		createButton(704, 16, 16, 116, Textures.BUTTON_NORMAL, Textures.BUTTON_SELECTED, "Save C", 40);
		setButtonSelectSound(Sounds.BUTTON_SELECT);
		setButtonClickSound(Sounds.BUTTON_SELECT);
	}

	@Override
	public void tick() {
		super.tick();
		if (buttonPressed) {
			switch (buttonSelected) {
			case 0: 
				
				break;
			case 1:
				
				break;
			case 2:
				
				break;
			}
		}
	}

	@Override
	public void render() {
		super.render();
		int textSize = 50;
		String text = "SAVE SELECT";
		Renderer.drawString(Main.WINDOW_WIDTH/2 - text.length()*textSize/2, Main.WINDOW_HEIGHT-textSize*2, textSize, text);
	}
}
