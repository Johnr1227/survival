package com.cool.menu;

import com.cool.Main;
import com.cool.Sounds;
import com.cool.Textures;
import com.cool.lib.Renderer;

public class WorldMenu extends Menu {
	@Override
	public void init() {
		createButton(704, 248, 16, 348, Textures.BUTTON_NORMAL, Textures.BUTTON_SELECTED, "A", 40);
		createButton(704, 132, 16, 232, Textures.BUTTON_NORMAL, Textures.BUTTON_SELECTED, "B", 40);
		createButton(704, 16, 16, 116, Textures.BUTTON_NORMAL, Textures.BUTTON_SELECTED, "C", 40);
		setButtonSelectSound(Sounds.BUTTON_SELECT);
		setButtonClickSound(Sounds.BUTTON_SELECT);
	}

	@Override
	public void tick() {
		super.tick();
		if (buttonPressed) {
			switch (buttonSelected) {
			case 0: // Start Game
				break;
			case 1: // Options
				break;
			case 2: // Quit
//				System.exit(-1);
				break;
			}
		}
	}

	@Override
	public void render() {
		super.render();
		Renderer.drawString(Main.WINDOW_WIDTH/2 - "World Select".length()*32/2, Main.WINDOW_HEIGHT-64, 32, "World Select");
	}
}
