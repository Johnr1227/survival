package com.cool.tiles;

import com.cool.Main;
import com.cool.Textures;
import com.cool.lib.Renderer;
import com.cool.tile.SoundType;
import com.cool.tile.TileObstacle;
import com.cool.world.generation.SimplexNoise;

public class TileTree extends TileObstacle {
	
	public TileTree() {
		super();
		setTexture(Textures.TREE);
		setTileName("tree");
		this.soundType = SoundType.DIRT;
		this.layer = 1;
	}
	@Override
	public String getDisplayName() {
		return "Tree";
	}
	@Override
	public void render(int ogX1, int ogY1, int ogX2, int ogY2, int tWidth) {
		ogX1 -= tWidth;
		ogY1 -= tWidth;
		ogX2 += tWidth;
		ogY2 += tWidth;
		Renderer.drawTexture3d(ogX1 + 
				(int)(tWidth/8*Math.sin((Main.TICKS/100f+SimplexNoise.noise(ogX1, ogY1)))), ogY1 + 
				(int)(tWidth/8*Math.sin((Main.TICKS+SimplexNoise.noise(ogX1, ogY1)))), 1, ogX2 + 
				(int)(tWidth/8*Math.sin((Main.TICKS+SimplexNoise.noise(ogX1, ogY1)))), ogY2 + 
				(int)(tWidth/8*Math.sin((Main.TICKS+SimplexNoise.noise(ogX1, ogY1)))), 1, texture);
	}
}
