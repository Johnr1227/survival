package com.cool.particle;

import com.cool.lib.Texture;
import com.cool.lib.Vertex;

public class ParticleType {
	public Texture texture;
	public float minVelZ;
	public float maxVelZ;
	public float minVelX;
	public float maxVelX;
	
	public float minSize;
	public float maxSize;
	
	public ParticleType (Texture texture, float minVelZ, float maxVelZ, float minVelX, float maxVelX, float minSize, float maxSize) {
		this.texture = texture;
		this.minVelZ = minVelZ;
		this.maxVelZ = maxVelZ;
		
		this.minVelX = minVelX;
		this.minVelX = maxVelX;
		
		this.minSize = minSize;
		this.maxSize = maxSize;
	}
	public Particle create(Vertex pos) {
		Particle p = new Particle(texture,pos,
				new Vertex(
						(int)(Math.random() * (maxVelX-minVelX) + minVelX),
						(int)(Math.random() * (maxVelZ-minVelZ) + minVelZ)));
		Particles.particles.add(p);
		return p;
	}
}
