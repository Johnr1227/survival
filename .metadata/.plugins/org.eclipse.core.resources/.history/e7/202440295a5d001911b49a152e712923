package com.cool.particle;

import com.cool.lib.Renderer;
import com.cool.lib.Texture;
import com.cool.lib.Vertex;

public class Particle {
	public Texture texture;
	public Vertex pos;
	public Vertex vel;
	public int size;
	
	public Particle(Texture texture, Vertex pos, Vertex vel, int size) {
		this.texture = texture;
		this.pos = pos;
		this.vel = vel;
		this.size = size;
	}
	public void tick() {
		this.vel.x *= 0.9f;
		this.vel.z -= 0.1f;
		this.pos.x += vel.x;
		this.pos.z -= vel.z;
	}
	public void render(int tWidth) {
		Renderer.drawTexture(pos.x, pos.z, pos.x + size, pos.z + size, texture);
	}
}
